<UserControl x:Class="Psyche.BarGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel HorizontalAlignment="Center">
        <Label Name="lblTitle" DockPanel.Dock="Bottom" Margin="0 -5 0 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="16" Height="55">Title</Label>
        <Border Name="barContainer" Background="PowderBlue" Width="32"  Margin="0 2">
            <Rectangle Name="bar" Fill="CadetBlue" Height="16" VerticalAlignment="Bottom"/>
        </Border>
    </DockPanel>
</UserControl>
